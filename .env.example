# Example environment variables for Journify
# Copy this to .env and fill real values for local development / production.

# PostgreSQL connection URL (required)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/journify_dev

# Qdrant HTTP endpoint (optional, defaults to http://127.0.0.1:6333)
QDRANT_URL=http://127.0.0.1:6333
# Qdrant API key (optional)
QDRANT_API_KEY=

# Application secret key (used for signing, sessions, ...)
SECRET_KEY=changeme

# API key expected by ApiKeyMiddleware for /api endpoints (optional for dev)
API_KEY=dev_api_key

# Logging level
LOG_LEVEL=debug

# Graceful shutdown grace period in seconds
GRACE_PERIOD_SECS=5

